{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend/app.py"
    },
    {
      "source": "/",
      "destination": "frontend/index.html"
    },
    {
      "source": "/(css|js)/(.*)",
      "destination": "frontend/$1/$2"
    },
    {
      "source": "/(.*)",
      "destination": "frontend/$1"
    }
  ]
}
